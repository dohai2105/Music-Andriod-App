<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/new_song_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:focusable="false"
        android:src="@drawable/ic_mm_song" />

    <TextView
        android:id="@+id/new_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/new_song_image"
        android:ellipsize="end"
        android:lines="1"
        android:maxLength="30"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:text="Large Text"
        android:textColor="#333333"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/new_song_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_song_title"
        android:layout_below="@+id/new_song_title"
        android:layout_centerVertical="true"
        android:maxLength="25"
        android:text="TextView"
        android:textColor="#999999" />

    <TextView
        android:id="@+id/new_song_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/new_song_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/new_song_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/new_song_singer"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="TextView" />

    <Spinner
        android:id="@+id/option_btn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/state_spinner_download"
        android:focusable="false" />

    <TextView
        android:id="@+id/playingStateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_song_singer"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/new_song_singer"
        android:layout_marginTop="10dp"
        android:text="playing ..."
        android:textColor="#A020F0"
        android:textSize="10dp"
        android:visibility="gone" />

</RelativeLayout>